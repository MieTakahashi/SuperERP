
@{
    ViewBag.Title = "Vendas e Orçamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vendas e Orçamentos</h2>

<div class="container text-right">
    <a class="btn btn-primary">Nova Venda</a>
    <a class="btn btn-default">Novo Orçamento</a>
</div>
<br />
<div class="container">    
    <div class="row text-center">
        <div class="col-sm-1"></div>
        <div class="text-center col-sm-2 btn-danger">
            <h4>Recusados <span class="badge">0</span></h4>
            <p class="lead">R$@ViewBag.Recusados</p>
        </div>
        <div class="text-center col-sm-2 btn-info" id="btnReceber">
            <h4>Orçamentos <span class="badge">1</span> </h4>
            <p class="lead">R$@ViewBag.Orcamentos </p>
        </div>
        <div class="text-center col-sm-2 btn-success" id="btnRecebidas">
            <h4>Aceitos <span class="badge">0</span></h4>
            <p class="lead">R$@ViewBag.Aceitos</p>
        </div>
        <div class="text-center col-sm-2 btn-success" id="btnRecebidas">
            <h4>Vendas <span class="badge">2</span></h4>
            <p class="lead">R$@ViewBag.Vendas</p>
        </div>
        <div class="text-center col-sm-2 btn-primary" id="btnTotal">
            <h4>Total <span class="badge">3</span></h4>
            <p class="lead">R$@ViewBag.Previsao</p>
        </div>
    </div>
</div>
