@model SuperERP.Vendas.DTO.PessoaFisicaDTO

@{
    ViewBag.Title = "Editar Cliente";
}

<style type="text/css">
    .field-validation-error {
        color: red;
    }
</style>

<h2>Editar Cliente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="well form-horizontal" id="form">
        @Html.ValidationSummary(true)
        <input type="hidden" name="pessoa" value="1" />
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="form-group col-md-4">
                <label class="control-label col-md-10">
                    <span class="pull-left">Nome</span>
                    @Html.TextBoxFor(model => model.Nome, new { style = "width:100%;" })
                    @Html.ValidationMessageFor(model => model.Nome)
                </label>
            </div>
        </div>
        <div class="row" id="jurFis">
            <div class="form-group col-md-4">
                <label class="control-label col-md-8">
                    <span class="pull-left">CPF</span><br />
                    @Html.TextBoxFor(model => model.CPF, new { style = "width:100%;" })
                    @Html.ValidationMessageFor(model => model.CPF)
                </label>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-8">
                    <span class="pull-left">RG</span>
                    @Html.TextBoxFor(model => model.RG, new { style = "width:100%;" })
                    @Html.ValidationMessageFor(model => model.RG)
                </label>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <a id="expandCont">
                    <label class="pull-left col-md-4">
                        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true" id="seta1"> Contato</span>
                    </label>
                </a>
            </div>
        </div>
        <div id="contato" style="display: none;">
            <div class="row">
                <div class="form-group col-md-4">
                    <label class="control-label col-md-2">
                        <span>Email</span>
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </label>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label col-md-2">
                        <span>Telefone</span>
                        @Html.EditorFor(model => model.Fone)
                        @Html.ValidationMessageFor(model => model.Fone)
                    </label>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label col-md-2">
                        <span>Cargo</span>
                        @Html.EditorFor(model => model.Cargo)
                        @Html.ValidationMessageFor(model => model.Cargo)
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <a id="expandEnd">
                    <label class="pull-left col-md-4">
                        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true" id="seta2"> Endereço</span>
                    </label>
                </a>
            </div>
        </div>
        <div id="endereco" style="display: none;">
            <div class="row">
                <div class="form-group col-md-4">
                    <label class="control-label col-md-10">
                        <span class="pull-left">Endereço</span>
                        @Html.TextBoxFor(model => model.Endereco, new { style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.Endereco)
                    </label>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label col-md-8">
                        <span class="pull-left">Número</span>
                        @Html.TextBoxFor(model => model.Numero, new { style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.Numero)
                    </label>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label col-md-10">
                        <span class="pull-left">Complemento</span>
                        @Html.TextBoxFor(model => model.Complemento, new { style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.Complemento)
                    </label>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label col-md-10">
                        <span class="pull-left">CEP</span>
                        @Html.TextBoxFor(model => model.CEP, new { style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.CEP)
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label class="control-label col-md-2">
                        <span>Bairro</span>
                        @Html.EditorFor(model => model.Bairro)
                        @Html.ValidationMessageFor(model => model.Bairro)
                    </label>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label col-md-6">
                        <span>Cidade (Cidade/UF)</span>
                        @Html.EditorFor(model => model.Cidade)
                        @Html.ValidationMessageFor(model => model.Cidade)
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <div class="col-md-4">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#Fone').mask('(00) 0000-00009');
        $('#Fone').each(function (event) {
            if ($(this).val().length == 15) {
                $('#Fone').mask('(00) 00000-0009');
            } else {
                $('#Fone').mask('(00) 0000-0009');
            }
        });
        $('#CPF').mask('000.000.000-00', { reverse: true });
        $('#RG').mask('99.999.999-9');
        $('#CEP').mask('00000-000');
        $('#expandCont').click(function () {
            $('#contato').slideToggle();
            $('#seta1').toggleClass('glyphicon-chevron-down glyphicon-chevron-up');
        });
        $('#expandEnd').click(function () {
            $('#endereco').slideToggle();
            $('#seta2').toggleClass('glyphicon-chevron-down glyphicon-chevron-up');
        });
    });
</script> 